{
  "name": "live-chat",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:socket": "node --loader ts-node/esm --trace-warnings server.mts",
    "build": "next build",
    "build:socket": "next build && tsc --project tsconfig.server.json",
    "start": "next start",
    "start:socket": "NODE_ENV=production node dist/server.mjs",  
    "lint": "next lint"
  },
  "dependencies": {
    "dotenv": "^17.0.0",
    "next": "15.3.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
